{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONUNBUFFERED": "1",
                "AGENT_DATA_FILE": "data/agents.json",
                "PING_INTERVAL_SECONDS": "3"
            },
            "args": [],
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "FastAPI Debug (Direct)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host", "127.0.0.1",
                "--port", "8000",
                "--reload",
                "--log-level", "debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONUNBUFFERED": "1",
                "AGENT_DATA_FILE": "data/agents.json",
                "PING_INTERVAL_SECONDS": "3"
            },
            "justMyCode": false
        }
    ]
}
